{
  "$id": "https://example.com/person.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PluginResults",
  "type": "object",
  "required": [
    "success",
    "truncated",
    "details",
    "errors"
  ],
  "properties": {
    "success": {
      "type": "boolean"
    },
    "truncated": {
      "enum": [false]
    },
    "details": {
      "type": "array",
      "items": {
        "anyOf": [
          { "$ref": "#/$defs/StaticAnalysisFinding" }
        ]
      }
    },
    "errors": {
      "type": "array",
      "items": { "type": "string" }
    }
  },

  "$defs": {
    "StaticAnalysisFinding": {
      "type": "object",
      "required": [
        "filename",
        "line",
        "message",
        "severity",
        "type"
      ],
      "properties": {
        "filename": {
          "type": "string"
        },
        "line": {
          "type": "integer"
        },
        "message": {
          "type": "string"
        },
        "severity": {
          "enum": ["critical", "high", "medium", "low", "negligible"]
        },
        "type": {
          "type": "string"
        }
      }
    }
  }
}
